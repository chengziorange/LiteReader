<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <ImageView
        android:id="@+id/iv_book_wrapper"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:contentDescription="Book Wrapper"
        app:srcCompat="@drawable/defult_book_wrapper" />

    <TextView
        android:id="@+id/tv_book_title"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_toEndOf="@id/iv_book_wrapper"
        android:gravity="start|center_vertical"
        android:singleLine="true"
        android:text="书名" />

    <TextView
        android:id="@+id/tv_book_author"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@id/tv_book_title"
        android:layout_toEndOf="@id/iv_book_wrapper"
        android:gravity="start|center_vertical"
        android:singleLine="true"
        android:text="作者" />

    <TextView
        android:id="@+id/tv_read_progress"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@id/tv_book_author"
        android:layout_toEndOf="@id/iv_book_wrapper"
        android:gravity="start|center_vertical"
        android:singleLine="true"
        android:text="阅读进度" />

    <TextView
        android:id="@+id/tv_last_chapter"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@id/tv_read_progress"
        android:layout_toEndOf="@id/iv_book_wrapper"
        android:gravity="start|center_vertical"
        android:singleLine="true"
        android:text="最新章节" />

</RelativeLayout>